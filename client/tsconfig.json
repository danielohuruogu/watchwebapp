{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "composite": true,
  "compilerOptions": {
    "composite": true,
    "strictNullChecks": true,
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["types/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@ui/*": ["./src/ui/*"],
    },
    "typeRoots": ["node_modules/@types", "./src/types"],
    "include": ["src/**/*"]
  },
  "include": ["src", "types"]
}

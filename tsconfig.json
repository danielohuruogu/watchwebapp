{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" }
  ],
  "composite": true,
  "compilerOptions": {
    "composite": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["types/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@ui/*": ["/ui/*"],
    },
    "typeRoots": ["node_modules/@types", "/types"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true
  }
}
